             xmlns:local="clr-namespace:ControlModifiedFiles"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/CheckBox.xaml"/>
                <ResourceDictionary Source="Resources/Grid.xaml"/>
                <ResourceDictionary Source="Resources/Image.xaml"/>
                <ResourceDictionary Source="Resources/Label.xaml"/>
                <ResourceDictionary Source="Resources/Separators.xaml"/>
                <ResourceDictionary Source="Resources/TextBlock.xaml"/>
                <ResourceDictionary Source="Resources/TextBox.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
