<Window x:Class="ControlModifiedFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlModifiedFiles"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" x:Name="MainWindowControlModifiedFiles"
        Title="Контроль версий файлов" Height="400" Width="800" MinHeight="400" MinWidth="800"
        Loaded="MainWindowControlModifiedFiles_Loaded" StateChanged="MainWindowControlModifiedFiles_StateChanged">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Style="{StaticResource BackgroundCommandPanel}">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ButtonAddFiles" Style="{StaticResource ButtonAddFiles}" Click="ButtonAddFiles_Click"/>
                <Button x:Name="ButtonRemoveFiles" Style="{StaticResource ButtonRemoveFiles}" Click="ButtonRemoveFiles_Click"/>
                <Button x:Name="ButtonSettings" Style="{StaticResource ButtonSettings}" Click="ButtonSettings_Click"/>
                <Button x:Name="ButtonVersions" Style="{StaticResource ButtonVersions}" Click="ButtonVersions_Click"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="GridWorkPanel" Grid.Row="1" Style="{StaticResource BackgroundTable}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.ColumnSpan="2" x:Name="DataGridList" Style="{StaticResource DataGridBase}"
                      Width="{Binding Path=ActualWidth, ElementName=GridWorkPanel, Converter={local:ElementsFormConverter}, ConverterParameter='15'}"
                      AutoGeneratedColumns="DataGridList_AutoGeneratedColumns"
                      CellEditEnding="DataGridList_CellEditEnding"
                      Drop="DataGridList_Drop" AllowDrop="True"
                      SelectionChanged="DataGridList_SelectionChanged"/>

            <Grid x:Name="GridProperties" Grid.Column="1" Margin="0,0,8,0" VerticalAlignment="Top"
                  Height="{Binding Path=ActualHeight, ElementName=GridWorkPanel, Converter={local:ElementsFormConverter}, ConverterParameter='8'}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Style="{StaticResource BackgroundStackPanel}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Separator Style="{StaticResource SeparatorHeadSettings}"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource LabelHiddenColumn}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxPath" Style="{StaticResource CheckBoxBase}" Click="CheckBoxPath_Click"/>
                                <Label Style="{StaticResource LabelHiddenColumnPath}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxDirectoryVersion" Style="{StaticResource CheckBoxBase}" Click="CheckBoxDirectoryVersion_Click"/>
                                <Label Style="{StaticResource LabelHiddenColumnDirectoryVersion}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxSize" Style="{StaticResource CheckBoxBase}" Click="CheckBoxSize_Click"/>
                                <Label Style="{StaticResource LabelHiddenColumnSize}"/>
                            </StackPanel>
                        </StackPanel>
                        <Separator Style="{StaticResource SeparatorBetweenElement10}"/>
                        <StackPanel Orientation="Vertical">
                            <Separator Style="{StaticResource SeparatorHeadSettings}"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource LabelOtherSettings}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxUsePrefixUserName" Style="{StaticResource CheckBoxBase}" Click="CheckBoxUsePrefixUserName_Click"/>
                                <Label Style="{StaticResource LabelUsPrefixUserName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxAutostart" Style="{StaticResource CheckBoxBase}" Click="Autostart_Click"/>
                                <Label Style="{StaticResource LabelAutostart}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource TextBlockAutostart}"/>
                                        <Image x:Name="ImageShield" Style="{StaticResource ImageShield}"/>
                                    </StackPanel>
                                </Label>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CheckBoxHideToTray" Style="{StaticResource CheckBoxBase}" Click="CheckBoxHideToTray_Click"/>
                                <Label Style="{StaticResource LabelHideToTray}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Separator Style="{StaticResource SeparatorBetweenRow10}"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelNotifyVersionCreation}"/>
                        <TextBox x:Name="TextBoxNotifyVersionCreation" Style="{StaticResource TextBoxNotifyVersionCreation}" TextChanged="TextBoxNotifyVersionCreation_TextChanged"/>
                    </StackPanel>
                    <Separator Style="{StaticResource SeparatorBetweenRow10}"/>
                    <Label Style="{StaticResource LabelUseComparsion}"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="CheckBoxUseV8Viewer" Style="{StaticResource CheckBoxBase}"/>
                        <Label Style="{StaticResource LabelUseV8Viewer}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="CheckBoxUseDefy" Style="{StaticResource CheckBoxBase}"/>
                            <Label Style="{StaticResource LabelUseDefy}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TextBoxPathDefy" Style="{StaticResource TextBoxPathDefy}" TextChanged="TextBoxPathDefy_TextChanged"
                                      Width="{Binding Path=ActualWidth, ElementName=GridProperties, Converter={local:ElementsFormConverter}, ConverterParameter='30'}"/>
                            <Button x:Name="ButtonSelectDefy" Style="{StaticResource ButtonBase}" Content="..." Width="20" BorderThickness="1"
                                    Click="ButtonSelectDefy_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Row="2">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ButtonSaveSettings" Style="{StaticResource ButtonSaveSettings}"
                            Click="ButtonSaveSettings_Click"/>
                        <Label x:Name="ModifiedSettings" Content="*" FontWeight="Black"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid x:Name="GridListVersion" Grid.Column="1" Margin="0,0,8,0" VerticalAlignment="Top" Visibility="Hidden"
                  Height="{Binding Path=ActualHeight, ElementName=GridWorkPanel, Converter={local:ElementsFormConverter}, ConverterParameter='6'}">
                <StackPanel Orientation="Vertical" Style="{StaticResource BackgroundStackPanel}"
                            Height="{Binding Path=ActualHeight, ElementName=GridListVersion, Converter={local:ElementsFormConverter}, ConverterParameter='0'}">
                    <Separator Style="{StaticResource SeparatorBetweenRow}"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelListVersion}"/>
                        <Separator Style="{StaticResource SeparatorBetweenElement10}"/>
                        <Button x:Name="ButtonCompareVersion" Style="{StaticResource ButtonCompareVersion}" Click="ButtonCompareVersion_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="DataGridVersion" ItemsSource="{Binding _listVersion}" AutoGenerateColumns="False" IsReadOnly="True"
                              Style="{StaticResource DataGridBase}" 
                              Height="{Binding Path=ActualHeight, ElementName=GridListVersion, Converter={local:ElementsFormConverter}, ConverterParameter='37'}"
                              Width="{Binding Path=ActualWidth, ElementName=GridListVersion, Converter={local:ElementsFormConverter}, ConverterParameter='4'}"
                              RowEditEnding="DataGridVersion_RowEditEnding" MouseDoubleClick="DataGridVersion_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn x:Name="CheckBoxSelectVersion" Width="15" Binding="{Binding Checked}">
                                <DataGridCheckBoxColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Image Source="/check.png"/>
                                    </DataTemplate>
                                </DataGridCheckBoxColumn.HeaderTemplate>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="Имя файла" Binding="{Binding FileName}" MaxWidth="400"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</Window>
