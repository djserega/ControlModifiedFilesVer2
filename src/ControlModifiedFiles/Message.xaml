<Window x:Class="ControlModifiedFiles.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlModifiedFiles"
        mc:Ignorable="d" x:Name="WindowMessage"
        Title="Message" Height="150" Width="200" WindowStyle="ToolWindow"
        Loaded="WindowMessage_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Style="{StaticResource BackgroundCommandPanel}"/>
        <Grid Grid.Row="1" Style="{StaticResource BackgroundTable}">
            <TextBlock Margin="5,5,5,30" x:Name="TextBlockMessage" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ButtonOK" Click="ButtonOK_Click" Style="{StaticResource ButtonOK}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
