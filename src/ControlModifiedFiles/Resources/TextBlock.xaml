<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ControlModifiedFiles.Resources">

    <Style TargetType="TextBlock" x:Key="TextBlockAutostart">
        <Setter Property="Text" Value="Автозапуск приложения"/>
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <TextBlock Text="Приложение будет запущено при старте системы"/>
                </ToolTip>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>